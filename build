#/bin/bash

cd images/nvim
nvimVer=0.8.0
nvimRev=G
nvimTag="v${nvimVer}_${nvimRev}"
docker build . -t vic-nvim:$nvimTag --build-arg nvimversion=$nvimVer
cd ../..

javaRev=B
javaTag="${nvimTag}_${javaRev}"
cd images/java-openjdk-x
#docker build . -t vic-java-openjdk-17:$javaTag --build-arg javaversion=17 --build-arg victag=$nvimTag
docker build . -t vic-java-openjdk-11:$javaTag --build-arg javaversion=11 --build-arg victag=$nvimTag --build-arg jdtlsversion=jdt-language-server-1.12.0-202205060359
cd ../..

cppRev=A
cppTag="${nvimTag}_${cppRev}"
cd images/cpp-x
docker build . -t vic-cpp-default:$cppTag --build-arg victag=$nvimTag
